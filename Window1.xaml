<Window x:Class="WpfLab2.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLab2"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">

    <Grid>
        <RadioButton Content="Ferrari" HorizontalAlignment="Left" Margin="100,70,0,0" VerticalAlignment="Top" Checked="fer_check" Unchecked="fer_uncheck"/>
        <RadioButton Content="Koenigsegg" HorizontalAlignment="Left" Margin="100,55,0,0" VerticalAlignment="Top" Checked="koe_check" Unchecked="koe_uncheck"/>
        <RadioButton Content="Toyota" HorizontalAlignment="Left" Margin="100,85,0,0" VerticalAlignment="Top" Checked="toy_check" Unchecked="toy_uncheck"/>

        <CheckBox Content="Radio" HorizontalAlignment="Left" Margin="100,180,0,0" VerticalAlignment="Top"                           Checked="rad_check" Unchecked="rad_uncheck"/>
        <CheckBox Content="Ogrzewanie" HorizontalAlignment="Left" Margin="100,195,0,0" VerticalAlignment="Top"                      Checked="ogr_check" Unchecked="ogr_uncheck"/>
        <CheckBox Content="Uchwyt na kubek" HorizontalAlignment="Left" Margin="100,210,0,0" VerticalAlignment="Top"                 Checked="uch_check" Unchecked="uch_uncheck"/>
        <CheckBox Content="Płyta z muzyczką z Initial D" HorizontalAlignment="Left" Margin="100,225,0,0" VerticalAlignment="Top"    Checked="ply_check" Unchecked="ply_uncheck"/>
        <CheckBox Content="Nitro" HorizontalAlignment="Left" Margin="100,240,0,0" VerticalAlignment="Top"                           Checked="nit_check" Unchecked="nit_uncheck"/>

        <Label Content="Marka" HorizontalAlignment="Left" Margin="100,30,0,0" VerticalAlignment="Top" Width="80"/>
        <Label Content="Wyposażenie" HorizontalAlignment="Left" Margin="100,154,0,0" VerticalAlignment="Top" Width="80"/>
        <Label Content="Polisa" HorizontalAlignment="Left" Margin="100,300,0,0" VerticalAlignment="Top" Width="80"/>

        <TextBox x:Name="polis" TextChanged="polis_TextChanged" HorizontalAlignment="Left" Margin="100,326,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" BorderThickness="2"/>

        <Button Click="powrot" Content="POWRÓT" HorizontalAlignment="Left" Height="40" Margin="600,311,0,0" VerticalAlignment="Top" Width="80"/>

        <Label Content="Cena" HorizontalAlignment="Left" Margin="504,0,0,0" VerticalAlignment="Center"/>
        <Label x:Name="label_cena" HorizontalAlignment="Left" Margin="504,225,0,0" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="0.5"/>
    </Grid>
</Window>
